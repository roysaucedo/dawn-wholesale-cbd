/** 
*  Styles for Quick Order Form page
***/
// Mixin

// Variables
$tablet: 768px;

$black: black;
$gray: rgb(190, 190, 190);
$red: red;
$blue: #01467f;

.highlight {
  color: $red;
  font-weight: 800;
  &.svg-inline--fa {
    fill: $red;
  }
}

