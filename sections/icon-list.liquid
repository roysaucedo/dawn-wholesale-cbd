<style>
  .icon__ctr {
    display: flex;
    justify-content: space-between;
    padding: 20px 0;
    margin-top: 20px;
    flex-wrap: wrap;

  }
  .icon__div {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    margin: 20px 30px;
  }

  .icon_list__icon {
    max-width: 70px;
    margin-bottom: 10px;
  }

  .icon__list_label {
    font-size: 18px;
    text-align: center;
  }

  @media only screen and (min-width: 768px) {
    .icon_list__icon {
      max-width: 100px;
      margin-bottom: 10px;
    }
  }
</style>

{%- comment -%}
  {% for block in section.blocks %}{% endfor %}
{%- endcomment -%}



<div class="icon__ctr page-width">
    {% for block in section.blocks %}
        <div class="icon__div">
            <img class="icon_list__icon" src="{{ block.settings.icon_image | img_url: 'medium' }}" alt="{{ block.settings.icon_image.alt | escape }}">
            <span class="icon__list_label">{{ block.settings.icon_label }}</span>
        </div>
    {% endfor %}
</div>

{% schema %}
  {
    "name": "Icon List",
    "settings": [],
    "blocks": [
      {
        "name": "Icon Image",
        "type": "icon-image",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon_image",
            "label": "Icon Image"
          }, {
            "type": "text",
            "id": "icon_label",
            "label": "Icon Label",
            "default": "Label"
          }
        ]
      }
    ]
  }
{% endschema %}
